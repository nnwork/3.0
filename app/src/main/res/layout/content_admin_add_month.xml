<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin.AdminAddMonthActivity"
    tools:showIn="@layout/activity_admin_add_month">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/AddMonthID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/roundtextview"
                android:hint="Month"
                android:inputType="text"
                android:padding="@dimen/edittextsize"
                android:drawableLeft="@drawable/ic_vintage_cellphone"
                />

            <EditText
                android:id="@+id/AddAmountID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/roundtextview"
                android:hint="@string/Amount"
                android:inputType="number"
                android:padding="@dimen/edittextsize"
                android:drawableLeft="@drawable/ic_vintage_cellphone"
                />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:id="@+id/btnUserSubmit"
                android:background="#ad1457"
                android:text="@string/submitbutton"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/buttontextsize" />


        </LinearLayout>



    </ScrollView>

</RelativeLayout>