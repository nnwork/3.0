<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_id"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visiters_name"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visiters_contect"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_flat_id"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_photo"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_watchman_id"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_v_date"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_v_time"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_flat_approve"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_app_date_time"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_visitors_exit_date_time"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/ic_building"
            android:layout_height="80dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="Building 1"
            android:id="@+id/txtbuildingname"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_right_arrow"
        android:layout_height="30dp"
        android:layout_weight="1"
        />

</RelativeLayout>