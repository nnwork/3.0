<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FlatOwner.OwnerProfileActivity"
    tools:showIn="@layout/activity_owner_profile"
    android:elevation="6dp"
    android:weightSum="2"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/grad"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:elevation="5dp"
                app:civ_border_overlay="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/user_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/textcolorwhite"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"

            android:layout_marginLeft="@dimen/textmarginleft"
            android:layout_marginTop="@dimen/textmargintop"
            android:textSize="20sp"
            android:id="@+id/user_contact"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_email"
                android:layout_marginLeft="@dimen/textmarginleft"
                android:layout_marginTop="@dimen/textmargintop"
                android:textSize="20sp"
                android:id="@+id/user_email"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user_email"
                    android:layout_marginLeft="@dimen/textmarginleft"
                    android:layout_marginTop="@dimen/textmargintop"
                    android:textSize="20sp"
                    android:id="@+id/aadhar_number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user_email"
                    android:layout_marginLeft="@dimen/textmarginleft"
                    android:layout_marginTop="@dimen/textmargintop"
                    android:textSize="20sp"
                    android:id="@+id/total_member"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>