<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin.AdminMaintenanceDetailsActivity"
    tools:showIn="@layout/activity_admin_maintenance_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textmarginleft"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance"
            android:id="@+id/admin_maintenance_display_user_name"
            android:layout_margin="@dimen/textmarginleft"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance"
            android:id="@+id/monthlyamount"
            android:layout_margin="@dimen/textmarginleft"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Display Amount"
            android:id="@+id/admin_maintenance_display_amount"
            android:layout_margin="@dimen/textmarginleft"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Display Status"
            android:id="@+id/admin_maintenance_display_status"

            android:layout_margin="@dimen/textmarginleft"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Display Pay Date"
            android:id="@+id/admin_maintenance_display_pay_date"
            android:layout_margin="@dimen/textmarginleft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Display Transaction Number"
            android:id="@+id/admin_maintenance_display_transaction_number"
            android:layout_margin="@dimen/textmarginleft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Display Transaction Pay Mode"
            android:id="@+id/admin_maintenance_display_pay_mode"
            android:layout_margin="@dimen/textmarginleft"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>