<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin.FormFund"
    tools:showIn="@layout/activity_form_fund"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:background="#ffffff">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fund"
                android:gravity="center"
                android:layout_margin="25dp"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/fundid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="FundID"
                android:textColor="@color/textviewcolor"
                android:inputType="number"
                android:padding="7dp"
                android:background="@drawable/roundtextview"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/fundtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="fundTITLE"
                android:textColor="@color/textviewcolor"
                android:padding="7dp"
                android:inputType="text"
                android:background="@drawable/roundtextview"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/fundamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="fundAMOUNT"
                android:textColor="@color/textcolorwhite"
                android:padding="7dp"
                android:inputType="number"
                android:background="@drawable/roundtextview"
                android:drawablePadding="10dp"
                />


            <EditText
                android:id="@+id/funddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="fundDate"
                android:textColor="@color/textcolorwhite"
                android:padding="10dp"
                android:background="@drawable/roundtextview"
                android:inputType="datetime"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fundbtn"
                android:text="submit"
                android:textColor="@color/textcolorwhite"
                android:padding="10dp"
                android:textSize="25dp"
                android:background="@drawable/roundbutton"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>