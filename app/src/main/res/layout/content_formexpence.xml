<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin.Formexpence"
    tools:showIn="@layout/activity_formexpence"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:background="#ffffff">


            <EditText
                android:id="@+id/expencetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="expenceTITLE"
                android:textColor="@color/textcolorwhite"
                android:padding="7dp"
                android:inputType="text"
                android:background="@drawable/roundtextview"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/expenceamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="AMOUNT"
                android:textColor="@color/textcolorwhite"
                android:padding="7dp"
                android:inputType="number"
                android:background="@drawable/roundtextview"
                android:drawablePadding="10dp"
                />


            <EditText
                android:id="@+id/expencedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:hint="Expected-Date"
                android:textColor="@color/textcolorwhite"
                android:padding="10dp"
                android:background="@drawable/roundtextview"
                android:inputType="datetime"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expencebtn"
                android:text="submit"
                android:textColor="@color/textcolorwhite"
                android:padding="10dp"
                android:textSize="25dp"
                android:background="@drawable/roundbutton"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>